{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "index.tsx", "App.tsx", "types.ts", "components/DeviceSelector.tsx", "components/EmotionDisplay.tsx", "components/Loader.tsx", "components/icons/FocusedIcon.tsx", "components/icons/FrustratedIcon.tsx", "components/icons/HappyIcon.tsx", "components/icons/MicrophoneIcon.tsx", "components/icons/StopIcon.tsx", "components/icons/TiredIcon.tsx", "components/icons/UploadIcon.tsx", "data/samples.ts", "pages/Settings.tsx", "services/geminiService.ts"]
}